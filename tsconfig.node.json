{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "noEmit": false,
    "baseUrl": ".",          // Important for paths to work
    "paths": {
      "@/*": ["..src/*"]
    }
  },
  "include": ["ml/**/*.ts", "src/**/*"]
}
